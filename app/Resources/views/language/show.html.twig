{% extends 'base.html.twig' %}

{% block body %}
    <h1>Language</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ language.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ language.nombre }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ language.locale }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('language_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('language_edit', { 'id': language.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
